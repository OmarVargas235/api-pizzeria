{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["es2015"],
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@routes/*": ["./src/routes/*"],
            "@config/*": ["./src/config/*"],
            "@controllers/*": ["./src/controllers/*"],
            "@models/*": ["./src/models/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@interfaces/*": ["./src/interfaces/*"],
        },
        "typeRoots": ["./node_modules/@types"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
